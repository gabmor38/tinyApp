<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      
    </div>
    <% if(!user) { %>
      <form method="POST" action="/login" class="navbar-nav" style="margin-left:50%">
        <input class= "form-control" type='text' name="user" placeholder= "Email" style="border-radius: 5px;">
        <button type="submit" style="background-color: transparent; border: 1px solid black; border-radius: 5px; margin-left:5px;">Login</button>
      </form>
    </div>
    <% } else { %> 
      <form method = "POST" action="/logout" style="margin-left:50%;">
        <span> Logged in as: <%= user.email %>!</span>
        <button type="login"style="background-color: transparent; border: 1px solid black; border-radius: 5px; margin-left:5px;">Logout</button>
      </form>
    <% } %>
  </nav>
</header>